---
title: Vaughn Sterling Tours
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Vaughn Sterling Tours</title>
  </head>
  <body style="font-family: system-ui, -apple-system, 'Segoe UI', Roboto; background:#f7fbff;color:#033c4a;">
    <header style="padding:18px;border-bottom:1px solid #e6eef5;">
      <h1 style="margin:0;color:#0ea5e9">Vaughn Sterling Tours</h1>
      <p style="margin:4px 0 0 0;color:#0b7285">My relocation from South Africa to Southeast Asia</p>
    </header>

    <main style="padding:16px;max-width:900px;margin:0 auto;">
      <section>
        <h2>Latest Journal</h2>
        <div id="articles"></div>
      </section>
    </main>

    <script>
      async function load(){
        try{
          const res = await fetch('/content/index.json').catch(()=>null);
          if(!res) return;
          const list = await res.json();
          const out = document.getElementById('articles');
          out.innerHTML = list.map(a => `<article style="background:#fff;padding:12px;margin:12px 0;border-radius:8px;box-shadow:0 6px 18px rgba(10,20,30,0.06);"><h3 style=\"margin:0;color:#0b7285\">${a.title}</h3><p style=\"color:#555\">${a.excerpt}</p><a href=\"/articles/${a.slug}.html\" style=\"color:#fff;background:#0ea5e9;padding:8px;border-radius:6px;text-decoration:none\">Read</a></article>`).join('');
        }catch(e){console.warn(e)}
      }
      load();
    </script>
  </body>
</html>
